<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="EQUI">
        <createTable tableName="EQUI_EQUIPMENT_CHECK_JOB">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_EQUI_EQUIPMENT_CHECK_JOB"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="timestamp with time zone"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="timestamp with time zone"/>
            <column name="JOB_NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="DESCRIPTION" type="VARCHAR(255)"/>
            <column name="CATEGORY" type="VARCHAR(255)"/>
            <column name="CHECKLIST_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="EQUIPMENT_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="JOB_STATUS" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="PLAN_TIME" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="CHECK_CYCLE" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CHECK_CYCLE_UNIT" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ACTUAL_TIME" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="EQUI">
        <createTable tableName="EQUI_EQUIPMENT_CHECK_JOB_ITEM">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_EQUI_EQUIPMENT_CHECK_JOB_ITEM"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="timestamp with time zone"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="timestamp with time zone"/>
            <column name="SEQUENCE" type="INT"/>
            <column name="JOB_ITEM_NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="CATEGORY" type="VARCHAR(255)"/>
            <column name="DESCRIPTION" type="VARCHAR(255)"/>
            <column name="CHECK_LIST_ITEM_TYPE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="STANDARD_VALUE" type="DECIMAL(19, 2)"/>
            <column name="MIN_VALUE" type="DECIMAL(19, 2)"/>
            <column name="MAX_VALUE" type="DECIMAL(19, 2)"/>
            <column name="CHECK_RESULT" type="VARCHAR(255)"/>
            <column name="EQUIPMENT_CHECK_JOB_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="EQUI">
        <createIndex indexName="IDX_EQUI_EQUIPMENT_CHECK_JOB_CHECKLIST" tableName="EQUI_EQUIPMENT_CHECK_JOB">
            <column name="CHECKLIST_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="CHECKLIST_ID" baseTableName="EQUI_EQUIPMENT_CHECK_JOB"
                                 constraintName="FK_EQUI_EQUIPMENT_CHECK_JOB_ON_CHECKLIST" referencedColumnNames="ID"
                                 referencedTableName="EQUI_CHECK_LIST"/>
    </changeSet>
    <changeSet id="4" author="EQUI">
        <createIndex indexName="IDX_EQUI_EQUIPMENT_CHECK_JOB_EQUIPMENT" tableName="EQUI_EQUIPMENT_CHECK_JOB">
            <column name="EQUIPMENT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="EQUIPMENT_ID" baseTableName="EQUI_EQUIPMENT_CHECK_JOB"
                                 constraintName="FK_EQUI_EQUIPMENT_CHECK_JOB_ON_EQUIPMENT" referencedColumnNames="ID"
                                 referencedTableName="EQUI_EQUIPMENT"/>
    </changeSet>
    <changeSet id="5" author="EQUI">
        <createIndex indexName="IDX_EQUI_EQUIPMENT_CHECK_JOB_ITEM_EQUIPMENT_CHECK_JOB"
                     tableName="EQUI_EQUIPMENT_CHECK_JOB_ITEM">
            <column name="EQUIPMENT_CHECK_JOB_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="EQUIPMENT_CHECK_JOB_ID" baseTableName="EQUI_EQUIPMENT_CHECK_JOB_ITEM"
                                 constraintName="FK_EQUI_EQUIPMENT_CHECK_JOB_ITEM_ON_EQUIPMENT_CHECK_JOB"
                                 onDelete="CASCADE" referencedColumnNames="ID"
                                 referencedTableName="EQUI_EQUIPMENT_CHECK_JOB"/>
    </changeSet>
</databaseChangeLog>